<br>
<h1>New Restaurant</h1>
<br>
<%= form_for(@restaurant) do |form| %>
<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

<br>
  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<br>
<%= link_to 'Back', restaurants_path %>
